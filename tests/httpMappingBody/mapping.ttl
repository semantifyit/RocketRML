@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix prefix: <http://mytestprefix.org/> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix fnml: <http://semweb.mmlab.be/ns/fnml#> .
@prefix fno: <http://w3id.org/function/ontology#> .
@prefix sti: <http://sti2.at#> .
@prefix grel: <http://users.ugent.be/~bjdmeest/function/grel.ttl#> .
@base <http://sti2.at/> . #the base for the classes


<#LOGICALSOURCE>
rml:source "./tests/httpMappingBody/input.json";
rml:referenceFormulation ql:JSONPath;
rml:iterator "$".


<#Mapping>
rml:logicalSource <#LOGICALSOURCE>;

 rr:subjectMap [
    rr:termType rr:BlankNode;
    rr:class prefix:Person;
 ];


rr:predicateObjectMap [
    rr:predicate prefix:name;
    rr:objectMap [ rml:reference "name" ];
];

rr:predicateObjectMap [
    rr:predicate prefix:age;
    rr:objectMap [ rml:reference "age" ];
];

rr:predicateObjectMap [
    rr:predicate prefix:likesSports;
    rr:objectMap  [
           rr:parentTriplesMap <#SPORTSmapping>;
        ];
].

<#SPORTSmapping>
rml:logicalSource <#LOGICALSOURCE>;

 rr:subjectMap [
    rr:termType rr:BlankNode;
    rr:class prefix:Sport;
 ];

rr:predicateObjectMap [
    rr:predicate prefix:loginToken;
    rr:objectMap  [
        rr:parentTriplesMap <#FunctionMap>;

     ];
].

<#FunctionMap>
    fnml:functionValue [
     rml:logicalSource <#LOGICALSOURCE> ;
        rr:predicateObjectMap [
            rr:predicate fno:executes ;
                 rr:objectMap [ sti:httpCall "url:'https://reqres.in/api/login', method:'POST', result:'token', body:'{\"email\":\"data[0];\",\"password\":\"data[1];\"}'" ] #
        ] ;
        rr:predicateObjectMap [
            rr:predicate grel:inputString ;
            rr:objectMap [ rml:reference "email" ]
        ];
        rr:predicateObjectMap [
            rr:predicate grel:inputString ;
            rr:objectMap [ rml:reference "password" ]
        ];
    ] .






